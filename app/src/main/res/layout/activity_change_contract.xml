<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comp_431.privacytracking.user.ChangeContractActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/llSwitches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/btnSave"
        android:layout_alignParentEnd="true">

        <Switch
            android:id="@+id/swZip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/swCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/swCountry"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <Switch
            android:id="@+id/swAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/swLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/swFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/swEmail"
            android:layout_width="wrap_content"
            android:layout_height="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtShareList"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="MODIFY SHARE LIST"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_above="@+id/llBottomLeft"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/llDeleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/txtShareList"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/Deleted"
            android:layout_width="140dp"
            android:layout_height="27dp"
            android:layout_margin="5dp"
            android:text="Deleted"/>

        <Switch
            android:id="@+id/swDeleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTopLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RootID"
            android:layout_width="140dp"
            android:layout_height="27dp"
            android:text="Root ID"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="215dp" />

        <TextView
            android:id="@+id/BackRef"
            android:layout_width="140dp"
            android:layout_height="27dp"
            android:text="Back Ref"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="179dp" />

        <TextView
            android:id="@+id/ExpirationTime"
            android:layout_width="140dp"
            android:layout_height="27dp"
            android:text="Expiration"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="144dp" />

        <TextView
            android:id="@+id/CreationTime"
            android:layout_width="140dp"
            android:layout_height="27dp"
            android:text="Creation"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="108dp" />

        <TextView
            android:id="@+id/UserID"
            android:layout_width="140dp"
            android:layout_height="27dp"
            android:text="User ID"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:id="@+id/CompanyID"
            android:layout_width="140dp"
            android:layout_height="27dp"
            android:text="Company ID"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="36dp" />

        <TextView
            android:id="@+id/URI"
            android:layout_width="140dp"
            android:layout_height="27dp"
            android:text="URI"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="251dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llTopRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtRootId"
            android:layout_margin="5dp"
            android:layout_width="167dp"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/txtBackRef"
            android:layout_margin="5dp"
            android:layout_width="167dp"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/txtExpTime"
            android:layout_margin="5dp"
            android:layout_width="167dp"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/txtCreationTime"
            android:layout_margin="5dp"
            android:layout_width="167dp"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/txtUserId"
            android:layout_margin="5dp"
            android:layout_width="167dp"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/txtCompanyId"
            android:layout_margin="5dp"
            android:layout_width="167dp"
            android:layout_height="27dp"/>
        <TextView
            android:id="@+id/txtUri"
            android:layout_margin="5dp"
            android:layout_width="167dp"
            android:layout_height="27dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/btnSave"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/Zip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Zip"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="430dp" />

        <TextView
            android:id="@+id/City"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="396dp" />

        <TextView
            android:id="@+id/Country"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Country"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="362dp" />

        <TextView
            android:id="@+id/Address"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="466dp" />

        <TextView
            android:id="@+id/LastName"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:text="Last Name"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="434dp" />

        <TextView
            android:id="@+id/FirstName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="396dp" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="362dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>
